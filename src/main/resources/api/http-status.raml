#%RAML 1.0
title: HTTP Status Mock API
version: v1
baseUri: /v1/http-status
description: |
  API to mock responses for various HTTP status codes. Supports GET, POST, PUT, DELETE on /{httpStatus}.
mediaType: application/json

types:
  HttpStatusResponse:
    type: object
    properties:
      code:
        type: integer
        description: HTTP status code
        example: 404
      message:
        type: string
        description: Human-readable status message
        example: Not Found
    example:
      code: 404
      message: Not Found

/info:
  get:
    description: Get information about the API
    responses:
      200:
        body:
          application/json:
            type: object
            properties:
              app:
                type: object
                properties:
                  groupId: string
                  artifactId: string
                  version: string
                  name: string
                  description: string
                  packaging: string
              endpoints:
                type: object
                properties:
                  summary:
                    type: object
                    properties:
                      total: integer
                      methods:
                        type: object
                        properties:
                          GET: integer
                          POST: integer
                          PUT: integer
                          PATCH: integer
                          DELETE: integer
                  list:
                    type: array
                    items:
                      type: string



/{httpStatus}:
  uriParameters:
    httpStatus:
      type: integer
      description: HTTP status code to mock
      examples:
        200:
          value: 200
          description: OK
        201:
          value: 201
          description: Created
        204:
          value: 204
          description: No Content
        400:
          value: 400
          description: Bad Request
        404:
          value: 404
          description: Not Found
  get:
    description: Mock GET response for the given HTTP status code
    responses:
      200:
        body:
          application/json:
